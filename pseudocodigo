Algoritmo tienda
Inicio
	escribe programa de una tienda
	escribe Selecciona una opcion	
	Escribe 1) Computadoras
	Escribe 2) impresoras
	Escribe 3)Scanner's
	Escribe 4) Plotter's
	Escribe 0) Salir
		Valora la opción del usuario
		Dependiendo de la opción muestra los productos disponibles
		el usuario realiza las compras deseadas
		termina su compra
		se le muestra un total a pagar
fin



Pseudocódigo tienda
Inicio
	variables op,op1, x, compra: tipo entero
	total: tipo real
	x<--1
	op<--0
	op1<--0
	compra<--0
		escribe ("Programa de una tienda")
		mientras (x<>0) 
			escribe ("selecciona una opción")
			escribe ("1) Computadoras")
			escribe ("2) impresoras")
			escribe ("3)Scanner's")
			escribe ("4) Plotter's")
			escribe ("0) Salir")
			lee (op)
				caso (op)
					(op=1):
						escribe (" Computadoras")
						escribe ("1) HP")
						escribe ("2) Vaio")
						escribe ("3) Apple")
						lee (op1)
							caso(op1)
								(op1=1)
									escribe("comprarás HP, tiene un costo de $12,000, ¿Concretas la compra?")
									escribe("1)Sí        2)No")
									lee(compra)
									si(compra=1) entonces
										total<-- total+12000
									otro
										continue
									fin si
								(op1=2)	
									escribe("comprarás Vaio, tiene un costo de $7,520 ¿lo compras?")
									escribe("1)Sí        2)No")
									lee(compra)
									si(compra=1) entonces
										total<--total+7520
									otro
										continue
									fin si	
								(op1=3)	
									escribe("comprarás Apple, tiene un costo de $18,000 ¿Lo compras?")
									escribe("1)Sí        2)No")
									lee(Compra)
									si(compra=1) entonces
										total<--total+18000
									otro
										continue
									fin si
							fin caso
					(op=2):
						Escribe("Impresoras")
						escribe ("1) HP")
						escribe ("2) Epson")
						escribe ("3) Samsung")
						lee (op1)
							caso (op1)
								(op1=1)
									escribe("Comprarás HP, tiene un costo de $3,240 ¿La compras?") 
									escribe("1)Sí        2)No")
									lee(compra)
									si (Compra=1) entonces
										total<--total+3240
									otro
										continue
									fin si	
								(op1=2)	
									Escribe("Comprarás Epson, tiene un costo de $1,350 ¿La compras?")
									escribe("1)Sí        2)No")
									lee(compra)
									Si(Compra=1) entonces
										total<--total+1350
									otro
										continue
									fin si
								(op1=3)	
									escribe("Comprarás Samsung, tiene un costo de "1,200 ¿La comprarás?")
									escribe("1)Sí        2)No")
									lee (compra)
									si(compra=1) entonces
										total<--total+1200
									otro
										continue
									fin si
							fin caso
					(op=3):
						escribe("Scanner's")
						escribe("1) HP")
						escribe("2) Epson")
						escribe("3) Samsung")
						lee (op1)
							caso (op1)
								(op1=1)
									escribe("Comprarás HP, tiene un costo de $2,240 ¿La compras?") 
									escribe("1)Sí        2)No")
									lee(compra)
									si (Compra=1) entonces
										total<--total+2240
									otro
										continue
									fin si	
								(op1=2)	
									Escribe("Comprarás Epson, tiene un costo de $950 ¿La compras?")
									escribe("1)Sí        2)No")
									lee(compra)
									Si(Compra=1) entonces
										total<--total+950
									otro
										continue
									fin si
								(op1=3)	
									escribe("Comprarás Samsung, tiene un costo de "1,250 ¿La comprarás?")
									escribe("1)Sí        2)No")
									lee (compra)
									si(compra=1) entonces
										total<--total+1250
									otro
										continue
									fin si
							fin caso
					(op=4):
						escribe("Plotter's")
						escribe("1) HP")
						escribe("2) Epson")
						escribe("3) Samsung")
						lee (op1)
							caso (op1)
								(op1=1)
									escribe("Comprarás HP, tiene un costo de $6,210 ¿La compras?") 
									escribe("1)Sí        2)No")
									lee(compra)
									si (Compra=1) entonces
										total<--total+6210
									otro
										continue
									fin si	
								(op1=2)	
									Escribe("Comprarás Epson, tiene un costo de $9,500 ¿La compras?")
									escribe("1)Sí        2)No")
									lee(compra)
									Si(Compra=1) entonces
										total<--total+9500
									otro
										continue
									fin si
								(op1=3)	
									escribe("Comprarás Samsung, tiene un costo de "10,250 ¿La comprarás? ")
									escribe("1)Sí        2)No")
									lee (compra)
									si(compra=1) entonces
										total<--total+10250
									otro
										continue
									fin si
							fin caso
					(op=0):
						Escribe("Gracias por tu compra, en un momento te muestro total a pagar :3")
						x<--0
		
						
				fin caso
		fin mientras

		escribe ("Total a pagar", total)
Fin
